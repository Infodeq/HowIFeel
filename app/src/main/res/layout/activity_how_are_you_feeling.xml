<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="40dp"
    tools:context=".ui.howyoufeeling.HowAreYouFeelingActivity">
    <TextView
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_are_you_feeling_today"/>
    <Button
        android:id="@+id/im_feeling_good"
        android:layout_marginTop="16dp"
        android:background="@drawable/primary_button"
        android:textColor="@color/white"
        android:text="@string/i_m_feeling_good"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/im_having_some_symptoms"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:text="@string/i_m_not_feeling_really_good"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/skip"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:text="@string/skip_question"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
</LinearLayout>